<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playChessView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00477d"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00477d"
        android:orientation="vertical">

        <Button
            android:id="@+id/log_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:text="@string/moves_log" />

        <TextView
            android:id="@+id/oponentName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="@string/empty_string"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/chessboard_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="8"
            android:padding="15dp"
            android:stretchMode="columnWidth" />

        <TextView
            android:id="@+id/playerName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/empty_string"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/leave_game_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:onClick="leaveGame"
            android:text="@string/leave_game" />

    </LinearLayout>

</LinearLayout>
